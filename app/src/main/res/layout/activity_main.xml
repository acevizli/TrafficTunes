<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- TextView to Display Nearby Songs -->
    <TextView
        android:id="@+id/txtSongInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No songs detected"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"/>

    <!-- BLE Scanning Switch -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Scanning"
        app:useMaterialThemeColors="true" />

    <!-- BLE Advertising Switch -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchAdvertise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Advertising"
        app:useMaterialThemeColors="true" />

</LinearLayout>
